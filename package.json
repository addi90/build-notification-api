{
  "name": "build-notification-api",
  "version": "1.0.0",
  "description": "The api for build-notification-app",
  "main": "index.js",
  "scripts": {
    "test": "mocha src/**/*.spec.js --compilers js:babel-register",
    "test:watch": "npm t -- -w",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100",
    "report-coverage": "nyc report --reporter=lcov",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "babel --out-dir dist src --ignore *.test.js",
    "prestart": "npm run build",
    "start": "node --inspect dist/index.js | ./node_modules/.bin/bunyan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/addi90/build-notification-api.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/addi90/build-notification-api/issues"
  },
  "homepage": "https://github.com/addi90/build-notification-api#readme",
  "dependencies": {
    "babel-register": "^6.18.0",
    "bunyan": "^1.8.5",
    "hapi": "^16.1.0",
    "http2": "^3.3.6",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4"
  }
}
