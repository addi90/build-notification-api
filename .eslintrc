{
    "env": {
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
           "modules": true,
           "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "brace-style": [1, "1tbs"],
        "comma-style": [1, "last"],
        "comma-dangle": [1, "never"],
        "indent": [1, 4, { "SwitchCase": 1 }],
        "no-constant-condition": 1,
        "semi": [1, "always"],
        "no-unused-vars": "error",
        "keyword-spacing": [1],
        "space-before-blocks": [1, "always"],
        "strict": [1, "never"],
        "quotes": [1, "single"],
        "no-console": [1]
    }
}
